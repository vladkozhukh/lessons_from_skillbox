<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Наименование техники"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/liftingTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Грузоподъемность, т"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@id/nameTextView"
        app:layout_constraintStart_toStartOf="@id/nameTextView"
        app:layout_constraintTop_toBottomOf="@id/nameTextView" />

    <EditText
        android:id="@+id/jibTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Длина стрелы, м"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@id/liftingTextView"
        app:layout_constraintStart_toStartOf="@id/liftingTextView"
        app:layout_constraintTop_toBottomOf="@id/liftingTextView" />

    <EditText
        android:id="@+id/outriggersTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Выносные опоры, м"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/jibTextView"
        app:layout_constraintStart_toStartOf="@id/jibTextView"
        app:layout_constraintTop_toBottomOf="@id/jibTextView" />

    <EditText
        android:id="@+id/heightTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Высота под крюк, м"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/jibTextView"
        app:layout_constraintStart_toStartOf="@id/jibTextView"
        app:layout_constraintTop_toBottomOf="@id/jibTextView" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/Tech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outriggersTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>